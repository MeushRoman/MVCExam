@model IEnumerable<WebApplication4.Models.SurveyModel>

@{
    ViewData["Title"] = "Index";
}
<script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>



<table class="table" style="text-align:center">
    <thead>
        <tr>
            <th style="width:10%">
                ID
            </th>
            <th style="width:60%">
                Название теста
            </th>
            <th style="width:15%">
                Кол-во вопросов
            </th>
            <th style="width:20%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountQuestion)
                </td>
                <td>
                    <a href="#" name="btnClick" data-id="@item.Id"  data-toggle="modal" class="btn btn-light" data-target="#myModal">Начать</a>
                </td>
            </tr>

        }
    </tbody>
</table>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Заполните, чтобы продолжить</h4>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>

            <form asp-controller="Questionnaire" asp-action="StartTest" id="mainForm"
                  data-ajax="true" data-ajax-method="POST"
                  data-ajax-mode="replace" data-ajax-update="#mainForm"
                  data-ajax-success="OnSuccess">

                <div class="modal-body">
                    <input type="text" name="Id" hidden id="SurvId" value="" />
                    <input type="text" class="form-control center-block" placeholder="Фамилия" name="FirstName" />
                    <br />
                    <input type="text" class="form-control center-block" placeholder="Имя" name="LastName" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>

                    <input type="submit" class="btn btn-primary" value="Продолжить" />
                </div>
            </form>
        </div>
    </div>
</div>


